#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main(){
    char input[10]={0};
    system("shutdown -s -t 60");   //60秒关机。
again:
    printf("电脑将在60s后关机，请输入“我是猪”来取消该操作！\n请输入：");
    scanf("%s",input);
    if(strcmp(input,"我是猪")==0)   //strcmp比较字符串，相同则输出0。
    {
        system("shutdown -a");   //取消关机。
    }
    else
        {
        goto again;
        }
    return 0;
}
