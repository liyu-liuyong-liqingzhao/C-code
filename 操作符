#include<stdio.h>
int main(){
    short a = 0;
    int b = 10;
    printf("%d",sizeof(a=b+10));     //大小由a的空间决定，因此输出2。
    printf("%d",a);                  //sizeof不参与运算，a的值不变化，输出0。
    
    int i = 0,a = 0,b = 2,c = 3,d = 4;
    i = a++ && ++b && d++;                 //a先使用再+1，i中a为0，逻辑与从左往右计算，第一项为假，则后面都为假，不再运算。
    a = 1;                                 //注意a已经赋值为1了。
    i = a++ || ++b || d++;                 //a变为1，逻辑或从左往右计算，第一项为真，后面不再计算。
    printf("%d %d %d %d",a,b,c,d);         //输出结果1,2,3,4.
                                           //第二次输出2,2,3,4.
    int c = (a=b+1,b=b+3,a=b+2);     //全部运算一遍，然后取最后一个表达式的结果。
    if(a=b+1,c=a-2,d>0)          //先全部运算一遍，然后判断最后一个表达式是否成立。
    while(a=f1(),f2(a),a>0)      //执行两个函数后，判断最后一个表达式是否成立。
    {
    }
    return 0;
    }
